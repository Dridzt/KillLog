		<Scripts>
			<OnLoad>
				getglobal(this:GetName().."Text"):SetText("SCT Color");
			</OnLoad>
			<OnClick>
				KillLog_OpenColorPicker();
			</OnClick>
			<OnEnter>
				getglobal(this:GetName().."SwatchBg"):SetVertexColor(NORMAL_FONT_COLOR.r, NORMAL_FONT_COLOR.g, NORMAL_FONT_COLOR.b);
			</OnEnter>
			<OnLeave>
				if (KillLog_Options.color) then
					getglobal(this:GetName().."SwatchBg"):SetVertexColor(KillLog_Options.color.r, KillLog_Options.color.g, KillLog_Options.color.b);
				else
					getglobal(this:GetName().."SwatchBg"):SetVertexColor( 0.0, 0.0, 0.0 );
				end
			</OnLeave>
			<NormalTexture name="$parentNormalTexture" file="Interface\ChatFrame\ChatFrameColorSwatch"/>
		</Scripts>
	</Button>
					
